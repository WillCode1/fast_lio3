<launch>

  	<arg name="rviz" default="true" />

	<param name="config_file" type="string" value="/config/mapping_dev.yaml" />

	<param name="localization_mode" type="bool" value="false" />
  	<node pkg="fast_lio3" type="fastlio_ros1" name="system" output="screen" required="true" launch-prefix="gdb -ex run --args" />

	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_lio3)/rviz_cfg/mapping.rviz" />
	</group>

</launch>
